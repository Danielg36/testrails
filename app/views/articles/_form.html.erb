<%= form_with model: article do |f| %>

    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <% article.errors.full_messages_for(:title).each do |msg| %>
            <div>
                <%= msg %>
            </div>
        <%end%>
    </div>

    <div>
        <%= f.label :body %>
        <%= f.text_area :body %>
        <% article.errors.full_messages_for(:body).each do |msg| %>
            <div>
                <%= msg %>
            </div>
        <%end%>
    </div>

    <div>
        <%= f.submit "Submit Form!" %>
    </div>

<% end %>